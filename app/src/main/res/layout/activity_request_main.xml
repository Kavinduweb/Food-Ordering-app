<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestMainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edittext_name"
        android:layout_margin="5dp"
        android:hint="Enter Name"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_margin="5dp"
        android:layout_below="@id/edittext_name"
        android:hint="Enter E-Mail"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edittext_category"
        android:layout_margin="5dp"
        android:layout_below="@id/edittext_email"
        android:hint="Enter Food Category"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edittext_type"
        android:layout_margin="5dp"
        android:layout_below="@id/edittext_category"
        android:hint="Enter Food Type"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_add"
        android:layout_margin="5dp"
        android:text="Add Request"
        android:background="#388E3C"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_view"
        android:layout_margin="5dp"
        android:text="View Request"
        android:textStyle="bold"
        android:background="#0288D1"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/button_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </LinearLayout>